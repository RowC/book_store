<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitm.rc.book_store">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bitm.rc.bookstore.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bitm.rc.bookstore.ProfileActivity" />
        <activity
            android:name="com.bitm.rc.bookstore.UserInfoActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" />
        <activity
            android:name="com.bitm.rc.bookstore.BookInfoActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" />
        <activity
            android:name="com.bitm.rc.bookstore.PublisherActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" />
        <activity
            android:name="com.bitm.rc.bookstore.BookInfoListActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" />
        <activity android:name="com.bitm.rc.bookstore.SucessActivity" />
        <activity
            android:name="com.bitm.rc.bookstore.SalesInfoListActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" />
        <activity android:name="com.bitm.rc.bookstore.UserInfoListActivity"
            android:parentActivityName="com.bitm.rc.bookstore.ProfileActivity" ></activity>
    </application>

</manifest>