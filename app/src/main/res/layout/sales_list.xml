<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#91bbfd"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/salesIdTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sasel 1"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/BookNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Book 1"
                    android:padding="8dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/salesQtyTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="details"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/salesPriceTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="details"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/salesDateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="details"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/imgDlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tooltipText="Delete"
                    android:src="@drawable/ic_delete"
                    android:background="#999"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/imgSalesEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tooltipText="Edit"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:background="#999"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>